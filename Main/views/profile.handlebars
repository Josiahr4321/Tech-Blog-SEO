<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Tech Post:</h3>

    <form class="form new-tech-post-form" action="/create-tech-post" method="POST">
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="title" name="title" required />
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-input" id="content" name="content" required></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Tech Post</button>
      </div>
    </form>
  </div>

  {{#if techPosts.length}}
  <div class="col-md-6 tech-post-list">
    <h3>Your Tech Posts:</h3>

    {{#each techPosts as |techPost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/tech-post/{{techPost.id}}">{{techPost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{techPost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
